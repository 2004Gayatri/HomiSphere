<% layout("/layouts/boilerplate") %>
<body>
  <h3>Add a New Listing</h3>
  <form method="POST" action="/listings">
    <input name="listing[title]" placeholder="Enter title" type="text" required>
    <br><br>

    <textarea name="listing[description]" placeholder="Enter description" rows="4" cols="50" required></textarea>
    <br><br>

    <input name="listing[image]" placeholder="Enter Image URL or Link" type="text" required>
    <br><br>

    <input name="listing[number]" placeholder="Enter price" type="number" required>
    <br><br>

    <input name="listing[location]" placeholder="Enter location" type="text" required>
    <br><br>

    <input name="listing[country]" placeholder="Enter country name" type="text" required>
    <br><br>

    <button type="submit">Add Listing</button>
  </form>
</body>

