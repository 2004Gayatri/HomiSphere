<% layout("/layouts/boilerplate") %>
<body>
  <h3>All Listings</h3>
  <!-- <form method="GET" action="/listings/new">
    <button>Create new list</button>
  </form> -->
  <div class="container mt-4">
  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% for(let listing of listings){ %>
      <div class="col">
        <a href="/listings/<%=listing._id %>" class="listing-links">
          <div class="card h-100 w-100">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
          <div class="card-img-overlay">  </div>
          <div class="card-body">
            <b><h5 class="card-title"><%= listing.title %></h5></b>
            <p class="card-text">
              Price: <%= listing.price ? listing.price.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) : "â‚¹0" %>
              <br>
              <%= listing.description %>
            </p>
          </div>
        
        </div>
        </a>
      </div>
    <% } %>
  </div>
</div>

</body>

